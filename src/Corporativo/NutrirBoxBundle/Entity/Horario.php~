<?php

namespace Corporativo\ConcurseiroBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Horario
 *
 * @ORM\Table(name="horario", uniqueConstraints={@ORM\UniqueConstraint(name="idx_pk_horario", columns={"co_horario"})}, indexes={@ORM\Index(name="idx_fk_atividade_horario", columns={"co_atividade"}), @ORM\Index(name="idx_fk_dia_semana_horario", columns={"co_dia_semana"})})
 * @ORM\Entity
 */
class Horario
{
    /**
     * @var integer
     *
     * @ORM\Column(name="co_horario", type="integer", nullable=false)
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="SEQUENCE")
     * @ORM\SequenceGenerator(sequenceName="horario_co_horario_seq", allocationSize=1, initialValue=1)
     */
    private $coHorario;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="hr_inicio", type="time", nullable=false)
     */
    private $hrInicio;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="hr_fim", type="time", nullable=false)
     */
    private $hrFim;

    /**
     * @var \Atividade
     *
     * @ORM\ManyToOne(targetEntity="Atividade")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="co_atividade", referencedColumnName="co_atividade")
     * })
     */
    private $coAtividade;

    /**
     * @var \DiaSemana
     *
     * @ORM\ManyToOne(targetEntity="DiaSemana")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="co_dia_semana", referencedColumnName="co_dia_semana")
     * })
     */
    private $coDiaSemana;


}
