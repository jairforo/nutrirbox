<?php

namespace Corporativo\ConcurseiroBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Promocao
 *
 * @ORM\Table(name="promocao", uniqueConstraints={@ORM\UniqueConstraint(name="idx_pk_promocao", columns={"co_promocao"})})
 * @ORM\Entity
 */
class Promocao
{
    /**
     * @var integer
     *
     * @ORM\Column(name="co_promocao", type="integer", nullable=false)
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="SEQUENCE")
     * @ORM\SequenceGenerator(sequenceName="promocao_co_promocao_seq", allocationSize=1, initialValue=1)
     */
    private $coPromocao;

    /**
     * @var string
     *
     * @ORM\Column(name="no_promocode", type="string", length=50, nullable=false)
     */
    private $noPromocode;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="dt_inicio_validade", type="date", nullable=false)
     */
    private $dtInicioValidade;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="dt_fim_validade", type="date", nullable=false)
     */
    private $dtFimValidade;

    /**
     * @var integer
     *
     * @ORM\Column(name="nu_pc_desconto", type="smallint", nullable=true)
     */
    private $nuPcDesconto;

    /**
     * @var string
     *
     * @ORM\Column(name="vl_desconto", type="decimal", precision=16, scale=2, nullable=true)
     */
    private $vlDesconto;

    /**
     * @var integer
     *
     * @ORM\Column(name="nu_qtd_utilizacao_limite", type="integer", nullable=true)
     */
    private $nuQtdUtilizacaoLimite;

    /**
     * @var integer
     *
     * @ORM\Column(name="nu_qtd_utilizacao", type="integer", nullable=true)
     */
    private $nuQtdUtilizacao;

    /**
     * @var boolean
     *
     * @ORM\Column(name="is_ativo", type="boolean", nullable=false)
     */
    private $isAtivo;

    /**
     * @var boolean
     *
     * @ORM\Column(name="is_reutilizavel", type="boolean", nullable=false)
     */
    private $isReutilizavel;


}
