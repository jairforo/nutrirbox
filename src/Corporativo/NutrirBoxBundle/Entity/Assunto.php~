<?php

namespace Corporativo\ConcurseiroBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Assunto
 *
 * @ORM\Table(name="assunto", uniqueConstraints={@ORM\UniqueConstraint(name="idx_pk_assunto", columns={"co_assunto"})}, indexes={@ORM\Index(name="idx_fk_assunto_assunto", columns={"co_assunto_pai"}), @ORM\Index(name="idx_fk_disciplina_assunto", columns={"co_disciplina"})})
 * @ORM\Entity
 */
class Assunto
{
    /**
     * @var integer
     *
     * @ORM\Column(name="co_assunto", type="integer", nullable=false)
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="SEQUENCE")
     * @ORM\SequenceGenerator(sequenceName="assunto_co_assunto_seq", allocationSize=1, initialValue=1)
     */
    private $coAssunto;

    /**
     * @var string
     *
     * @ORM\Column(name="no_nome", type="text", nullable=false)
     */
    private $noNome;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="hr_qtd_estudo", type="time", nullable=true)
     */
    private $hrQtdEstudo;

    /**
     * @var \Assunto
     *
     * @ORM\ManyToOne(targetEntity="Assunto")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="co_assunto_pai", referencedColumnName="co_assunto")
     * })
     */
    private $coAssuntoPai;

    /**
     * @var \Disciplina
     *
     * @ORM\ManyToOne(targetEntity="Disciplina")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="co_disciplina", referencedColumnName="co_disciplina")
     * })
     */
    private $coDisciplina;


}
