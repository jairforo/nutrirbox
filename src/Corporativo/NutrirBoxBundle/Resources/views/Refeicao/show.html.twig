    {% extends 'NutrirBoxBundle::base.html.twig' %}
    {% block title %} Refeicao {% endblock %}
    {% block header %} Refeicao {% endblock %}
    {% block subheader %} Detalhe {% endblock %}

{% block body -%}
    <div class="profile-user-info profile-user-info-striped">
            <div class="profile-info-row">
                <div class="profile-info-name"> Refeicao </div>
                <!-- integer -->                <div class="profile-info-value">
                    <span>{{ entity.coRefeicao }}</span>
                </div>
            </div>
            <div class="profile-info-row">
                <div class="profile-info-name"> Entregue </div>
                <!-- boolean -->                
                <div class="profile-info-value">
                    <span>{% if entity.isEntregue == 1 %} Sim {% else %} Não {% endif %}</span>
                </div>
            </div>
            <div class="profile-info-row">
                <div class="profile-info-name"> Entrega </div>
                <!-- datetime -->                
                <div class="profile-info-value">                    
                                        <span> {{ entity.dtEntrega != '' ? entity.dtEntrega|date('d/m/Y h:i:s') : '' }} </span>
                </div>
            </div>
            <div class="profile-info-row">
                <div class="profile-info-name"> Ativo </div>
                <!-- boolean -->                
                <div class="profile-info-value">
                    <span>{% if entity.isAtivo == 1 %} Sim {% else %} Não {% endif %}</span>
                </div>
            </div>
            <div class="profile-info-row">
                <div class="profile-info-name"> Observacao </div>
                <!-- text -->                <div class="profile-info-value">
                    <span>{{ entity.deObservacao }}</span>
                </div>
            </div>
    </div>
        
    <div class="hr dotted"></div>

        <p>
    <a href="{{ path('admin_refeicao') }}" class="btn">
        <i class="ace-icon fa fa-arrow-left bigger-120"></i>
        Listar
    </a>
            <a href="{{ path('admin_refeicao_edit', { 'id': entity.coRefeicao }) }}" class="btn">
            <i class="ace-icon fa fa-pencil bigger-120"></i>
            Editar
        </a>
                <a href="#" class="btn btn-delete">
            <i class="ace-icon fa fa-trash bigger-120"></i>
            Deletar
        </a>
        {{ form(delete_form) }}
    </p>{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{asset('bundles/nutrirbox/dist/js/config/deletar.js')}}'></script>
{% endblock %}
 